0. bootujemo u arch live
1. proveravamo imamo li internet:
	ping archlinux.org
1.1 ako nemamo, namestamo Wi-Fi:
	iwctl
	device list
	station _device_ scan
	station _device_ get-networks
	station _device_ connect _SSID_
	quit
2. brisemo disk ako je SSD, npr /dev/nvme0n1:
	blkdiscard /dev/nvme0n1
3. pravimo particije na disku:
	3.1. da izlistamo particije:
		fdisk -l
	3.2. sada biramo disk za instalaciju, na primer /dev/nvme0n1, i otvaramo ga:
		fdisk /dev/nvme0n1
	3.3. sada pravimo partition table:
		o
	3.4. pravimo particije:
		n
		od 0x800 do 0x80800 (256MiB za boot)
		n
		od 0x80800 do 0x80800+0x800*(broj MiB za glavnu particiju)
	3.5. pisemo promene na disk:
		w
4. listamo nove particije:
	fdisk -l

potvrdi da si na EFI:
	find /sys/firmware/efi/efivars -mindepth 1 -print -quit

timedatectl set-ntp true

mkfs.fat -F 32 "PART_1"
mkfs.ext4 "PART_2"
mount -o defaults,noatime "PART_2" /mnt
mkdir /mnt/efi
mount -o defaults,noatime "PART_1" /mnt/efi

pacman -Syy
pacman -S --noconfirm archlinux-keyring
pacstrap /mnt base linux linux-firmware
mkdir /mnt/root/tren
mount -t tmpfs tmpfs -o defaults,size=128M /mnt/root/tren
genfstab -U /mnt >> /mnt/root/tren/fstab_radni
cd /
arch-chroot /mnt /bin/bash

mkdir -p /var/cache/pacman/pkg
rm -rf /var/cache/pacman/pkg/*
mount -t tmpfs tmpfs -o defaults,size=2560M /var/cache/pacman/pkg

passwd
useradd -mg wheel "USERNAME"
passwd "USERNAME"

cd /etc
sed -i 's/^#Color/Color/' pacman.conf
sed -i 's/#en_US.UTF-8/en_US.UTF-8/' locale.gen
locale-gen
echo "LANG=en_US.UTF-8" >> locale.conf
echo arch >> hostname
ln -sf /usr/share/zoneinfo/Europe/Belgrade localtime

pacman -S --needed networkmanager grub nano base-devel efibootmgr amd-ucode
rm -rf /var/cache/pacman/pkg/*

EDIT nanorc:
	set zap
	tabsize 4

EDIT sudoers:
	%sudo
groupadd sudo
gpasswd -a $username sudo

mkdir -p NetworkManager/conf.d
EDIT NetworkManager/conf.d/dns.conf:
	[main]
	dns=none
systemctl enable NetworkManager
EDIT /etc/resolv.conf:
	nameserver 80.67.169.40
	nameserver 80.67.169.12
	nameserver 217.182.198.203
	nameserver 62.210.136.158

cd /root/tren
curl https://raw.githubusercontent.com/donaastor/zivan/refs/heads/main/fstabx > fstabx
sed -i 's/usernm/USERNAME/' fstabx
cat fstabx >> fstab_radni
cp fstab_radni /etc/fstab

cd /home/USERNAME
sudo -u USERNAME mkdir -p tren media docs .cargo .config{,/nitrogen,/i3,/libfm} .cache .local{,/share} .cache/{fontconfig,mesa_shader_cache,pip,thumbnails,babl}
mkdir /var/lib/systemd/coredump
cd /tmp

EDIT /etc/systemd/journald.conf:
	[Journal]
	Storage=volatile
rm -rf /var/log/journal

EDIT /etc/mkinitcpio.conf:
	MODULES=(amdgpu ...)
mkinitcpio -P

grub-install --target=x86_64-efi --efi-directory=/efi --bootloader-id=GRUB
EDIT /etc/default/grub:
	GRUB_TIMEOUT=1
	GRUB_CMDLINE_LINUX_DEFAULT="... mitigations=off amdgpu.ppfeaturemask=0xffffffff amdgpu.dcdebugmask=0x10"
grub-mkconfig -o /boot/grub/grub.cfg

mkdir -p /etc/systemd/system/getty@tty1.service.d
EDIT /etc/systemd/system/getty@tty1.service.d/autologin.conf:
	[Service]
	ExecStart=
	ExecStart=-/sbin/agetty -o '-p -f -- \\u' --noclear --autologin root - $TERM
	Type=simple

exit
reboot

timedatectl set-ntp true

pacman -S --needed linux-headers dkms mesa libglvnd libva xf86-video-amdgpu vulkan-tools mesa-utils libva-utils libva-vdpau-driver libvdpau-va-gl git xorg-server xorg-xinit xorg-xrdb xorg-xinput numlockx xbindkeys i3-gaps i3status i3lock nitrogen picom pipewire pipewire-pulse pipewire-jack wireplumber rtkit alacritty xdg-utils man-db man-pages nnn htop zip unzip p7zip ufw lshw usbutils smartmontools exfatprogs bc openssh tmux vlc feh zathura zathura-djvu zathura-pdf-poppler flameshot calc geany geany-plugins gimp torsocks python python-pip inetutils fuse3 imagemagick ffmpeg libjpeg-turbo

modprobe fuse

cd /tmp
git clone https://github.com/donaastor/zivan.git
cd zivan
chown USERNAME:wheel .xinitrc poz.jpg .xbindkeysrc config status_script.sh i3status
chmod 755 gpu_fan cppc ejex numlock status_script.sh
. /tmp/zivan/aur_get.sh

sudo -u USERNAME aurget simplescreenrecorder xidlehook xkb-switch-i3 xkblayout-state-git zenpower3-dkms zenmonitor3-git librewolf-bin
modprobe zenpower

rm /root/.bash_profile

sensors-detect --auto
GPUFA="gpf() {\n  local dflt=104\n  bash /opt/gpu_fan \$dflt \$1\n}\n"
mv /tmp/zivan/gpu_fan /opt/gpu_fan
mv /tmp/zivan/gpu_fan.service /etc/systemd/system/gpu_fan.service
systemctl enable gpu_fan
cat /tmp/zivan/bashrc_suffix >> /etc/bash.bashrc

printf "blacklist pcspkr\n" > /etc/modprobe.d/nobeep.conf
EDIT /etc/xdg/picom.conf:
	#fade-in-step
	#fade-out-step
	#no-fading-openclose
	fading = false;
	popup_menu = { ... opacity = 0.93; }
	dropdown_menu = { ... opacity = 0.93; }
cd /home/USERNAME
EDIT as USERNAME .Xresources:
	Xft.dpi: 192
mv /tmp/zivan/.xinitrc ./
mv /tmp/zivan/poz.jpg media/
EDIT as USERNAME .config/nitrogen/bg-saved.cfg:
	[xin_-1]
	file=/home/USERNAME/media/poz.jpg
	mode=5
	bgcolor=#000000

sed 's/^alias ls.*$//' /home/USERNAME/.bashrc > /tmp/brct
cat /tmp/zivan/bashrc_user_suffix >> /tmp/brct
chown USERNAME:wheel /tmp/brct
cp /tmp/brct /home/USERNAME/.bashrc

mv /tmp/zivan/numlock /opt/
mv /tmp/zivan/numlock.service /etc/systemd/system/
systemctl enable numlock

EDIT /usr/local/etc/.pythonrc:
	import readline
	readline.write_history_file = lambda *args: None

cd /usr/share/icons/default
mkdir cursors
cd cursors
ln -s /usr/share/icons/Adwaita/cursors/left_ptr watch
localectl --no-convert set-x11-keymap us,ru,rs,rs pc105 ,,latin,yz

cd /tmp/zivan
mv .xbindkeysrc /home/USERNAME/
mv config status_script.sh /home/USERNAME/.config/i3/
mv i3status /home/$username/.config/i3/

cppc kbswtb
mv kbswtb /opt/

mandb

mv local.conf /etc/fonts/

systemctl start ufw
systemctl enable ufw
ufw default allow outgoing
ufw default deny incoming
ufw enable

mv cppc ejex /usr/local/bin/
mv poz.jpg /home/USERNAME/media/
mv geany /home/USERNAME/.config/geany-base
ln -s /tmp/geany-conf /home/USERNAME/.config/geany
mv libfm.conf /home/USERNAME/.config/libfm/

EDIT /etc/systemd/system/getty@tty1.service.d/autologin.conf:
	[Service]
	ExecStart=
	ExecStart=-/sbin/agetty -o '-p -f -- \\u' --noclear --autologin USERNAME - $TERM
	Type=simple
	Environment=XDG_SESSION_TYPE=x11

reboot

pactl set-sink-volume @DEFAULT_SINK@ 100%
