# alternatively, you can use the cursor keys:
bindcode $mod+$Left focus left
bindcode $mod+$Down focus down
bindcode $mod+$Up focus up
bindcode $mod+$Right focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindcode $mod+$kH split h

# split in vertical orientation
bindcode $mod+$kV split v

# ukloni prozor sa ekrana
bindcode $mod+Shift+$kminus move scratchpad
bindcode $mod+Shift+$kplus scratchpad show

# swapping
bindcode $mod+$kP unmark swapee; mark swapee; move container to workspace "swap"
bindsym $mod+Tab mark swapt; swap container with mark swapee; [con_mark="swapt"] mark --replace "swapee"
bindcode $mod+$BracketLeft [con_mark="swapee"] focus; unmark swapee

bindcode $mod+$Grave workspace next

# enter fullscreen mode for the focused container
bindcode $mod+$kF fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindcode $mod+$kS layout stacking
bindcode $mod+$kW layout tabbed
bindcode $mod+$kE layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindcode $mod+$kA focus parent

# focus the child container
#bindcode $mod+$kD focus child

